
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <%= resource_name.to_s.humanize %> Profile Update
                  </div>
                </div>
                <hr>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-lg-12">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                          <%= devise_error_messages! %>
                          
                      <div class="form-group">
                        <label for="full_name"><%= f.label :full_name %></label>
                        <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: "form-control" %>
                      </div>
                      
                      <div class="form-group">
                        <label for="location"><%= f.label :location %></label>
                        <%= f.text_field :location, autofocus: true, placeholder: "Location", class: "form-control" %>
                      </div>
                      
                      <div class="form-group">
                        <label for="email"><%= f.label :email %></label>
                        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", readonly: true %>
                      </div>
                      
                      <div class="form-group">
                        <label for="password"><%= f.label :password %></label>
                        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
                      </div>
                      
                      <div class="form-group">
                        <label for="confirm-password"><%= f.label :password_confirmation %></label>
                        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
                      </div>
                      
                      <div class="form-group">
                        <label for="confirm-password"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></label>
                        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: "form-control" %>
                      </div>
                      
                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-6 col-sm-offset-3">
                            <%= f.submit "Update",  class: "form-control btn btn-register" %>
                          </div>
                        </div>
                      </div>
                      
                    <% end %>

                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-6 col-sm-offset-2">
                            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
                          </div>
                        </div>
                      </div>
                      <%= link_to "Back", :back %>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
